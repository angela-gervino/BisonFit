<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:paddingVertical="10dp"
    android:layout_marginVertical="5dp"
    android:id="@+id/exercise_item_layout">

    <TextView
        android:id="@+id/lblExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Bicep Curls"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setCountWorkoutOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deleteExerciseButton"
        android:layout_marginEnd="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="x2" />

    <ImageButton
        android:id="@+id/deleteExerciseButton"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/delete_icon"
        tools:srcCompat="@drawable/delete_icon"
        android:onClick="deleteExercise"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>

