<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BisonFit"
        tools:targetApi="31">
        <activity
            android:name=".ui.GymHoursActivity"
            android:exported="false" />
        <activity
            android:name=".ui.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WorkoutOverviewActivity"
            android:exported="false"
            android:label="@string/title_activity_workout_overview"
            android:theme="@style/Base.Theme.BisonFit.ActionBar" />
        <activity
            android:name=".ui.HomePageActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.ExerciseSelectionActivity"
            android:exported="false"
            android:label="ExerciseSelectionPage" />
        <activity
            android:name=".ui.ActiveWorkoutActivity"
            android:exported="false"
            android:label="ActiveWorkoutPage"
            android:theme="@style/Base.Theme.BisonFit.ActionBar" />
    </application>

</manifest>